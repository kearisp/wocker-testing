    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@wocker/core": "^1.0.28",
        "docker-modem": "*",
        "dockerode": "*",
        "jest": "^30.1.3",
        "make-coverage-badge": "^1.2.0",
        "memfs": "^4.17.2",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
